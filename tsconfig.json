{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["data/*"]
}
